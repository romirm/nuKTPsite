{
  "rules": {
    "users": {
      "$user_id": {
        ".read":"$user_id === auth.uid || root.child('users').child(auth.uid).child('admin').val() === true",
        "admin": {
          ".write":false
        },
        "year": {
          ".write": "$user_id === auth.uid || root.child('users').child(auth.uid).child('admin').val() === true"
        },
        "major": {
          ".write": "$user_id === auth.uid || root.child('users').child(auth.uid).child('admin').val() === true"
        },
        "$child": {
          ".write": "$user_id === auth.uid && $child != 'admin'"
        }
      }
    },
    "allowed_users": {
      ".read": "auth.uid != null",
      "$user_id": {
        ".write": "root.child('users').child(auth.uid).child('admin').val() === true"
      }
    },
    "public_users": {
      "$user_id": {
        "year": {
          ".write": "$user_id === auth.uid || root.child('users').child(auth.uid).child('admin').val() === true"
        },
        "major": {
          ".write": "$user_id === auth.uid || root.child('users').child(auth.uid).child('admin').val() === true"
        },
        ".write": "$user_id === auth.uid"
      },
      ".read": "auth.uid != null"
    },
    "leetcode_offsets": {
      "$user_id": {
        ".write": false,
        ".read": "auth.uid != null"
      }
    },
    "announcements": {
      ".write": false,
      ".read": "auth.uid != null"
    },
    "calendar_events": {
      ".read": "auth.uid != null",
      "$event_id": {
        ".write": "root.child('users').child(auth.uid).child('admin').val() == true"
      }
    }
  }
}